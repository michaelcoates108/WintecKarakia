<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/karakia_timatanga_one"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/bird" />

    <TextView
        android:id="@+id/karakia_timatanga_one_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/karakia_timatanga_one"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-6dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Karakia Timatanga - Tahi
        (Opening One)"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/karakia_timatanga_two"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/karakia_timatanga_one"
        app:srcCompat="@drawable/wintec_marae" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/karakia_timatanga_two"
        android:layout_marginTop="-6dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/karakia_timatanga_one_text"
        android:background="@color/white"
        android:gravity="center"
        android:text="Karakia Timatanga - Rua
        (Opening Two)"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/karakia_ki_te_kai"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/karakia_timatanga_one_text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/karakia_timatanga_one"
        app:srcCompat="@drawable/carving2" />

    <TextView
        android:id="@+id/karakia_ki_te_kai_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/karakia_ki_te_kai"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Karakia Ki Te Kai
        (Blessing for food)"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/karakia_whakamutunga_tahi"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/karakia_ki_te_kai"
        app:srcCompat="@drawable/marae_carvings" />

    <TextView
        android:id="@+id/karakia_whakamutunga_tahi_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_below="@+id/karakia_whakamutunga_tahi"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-10dp"
        android:layout_toEndOf="@+id/karakia_ki_te_kai_text"
        android:background="@color/white"
        android:gravity="center"
        android:text="Karakia Whakamutunga
        Tahi (Closing One)"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/karakia_whakamutunga_rua"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_below="@+id/karakia_ki_te_kai_text"
        android:layout_alignStart="@+id/karakia_ki_te_kai"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/music" />

    <TextView
        android:id="@+id/karakia_whakamutunga_rua_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_below="@+id/karakia_whakamutunga_rua"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-25dp"
        android:layout_toEndOf="@+id/karakia_ki_te_kai_text"
        android:background="@color/white"
        android:gravity="center"
        android:text="Karakia Whakamutunga
        Rua (Closing Two)"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/history"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_below="@+id/karakia_whakamutunga_tahi_text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/karakia_whakamutunga_tahi_text"
        app:srcCompat="@drawable/history" />

    <TextView
        android:id="@+id/history_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_below="@+id/history"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-15dp"
        android:layout_toEndOf="@+id/karakia_whakamutunga_rua_text"
        android:background="@color/white"
        android:gravity="center"
        android:text="HÄ«tori - History"
        android:textColor="@color/black" />

</GridLayout>